global proc int
unparentDuplicateEmitters() {
	waitCursor -state on;
	$items = `ls -sl`;
	for ($item in $items) {
		$gotone = 0;
		$kids = `listRelatives -c $item`;
		for ($kid in $kids) {
			if (nodeType($kid) == "pointEmitter") {
				if ($gotone) {
					parent -w -r $kid;
				}
				$gotone = 1;
			}
		}
	}
	waitCursor -state off;
	return(0);
}
